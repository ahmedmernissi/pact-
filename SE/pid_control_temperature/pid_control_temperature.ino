/*  PID control for the temperature of the heating element*///values for K constants will need to be changeddouble kP = 1; // proportional controldouble kD = 1; // derivative controldouble kI = 1; // integral controldouble elapsedTime;long currentTime, previousTime;double error, previousError;double input, output;double setTemp;double integralError, derivativeError;void setup() {  setTemp = 0; //choose the temperature value desired}void loop() {  input = ; // insert the fabric input  output = pid(input);  delay(100); // wait 0.1 s  // insert here the temperature control}double pid (double input) {  currentTime = millis();  elapsedTime = (double) (currentTime - previousTime);  //error values calculation  error = setTemp - input;  integralError += error * elapsedTime;  derivativeError = (error - previousError) / elapsedTime;  //PID calculation  output = kP * error + kD * derivativeError + kI * integralError;  //updates before next loop  previousError = error;  previousTime = currentTime;  return output;}